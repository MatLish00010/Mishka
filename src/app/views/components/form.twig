<section class="form">
    <form action="#" method="post">
        <div class="container">
            <div class="form__wrap">
                {% include '../components/title-description.twig' with
                    {
                        'item_description' : 'Мы будем рады воплотить в жизнь ваши пожелания!
					Заполните простую форму заказа и мы свяжемся с вами,
					чтобы уточнить детали.',
                    } %}
                <div class="form__selection">
                    <h3 class="form__title">Тип</h3>
                    <div class="form__selection-wrap">
                        {% include 'radio.twig' with
                            {
                                'title' : 'Аксессуар для интерьера',
                                'class' : 'radio',
                                'type' : 'radio',
                                'name' : 'radio',
                                'requierd' : '#',
                            } %}
                        {% include 'radio.twig' with
                            {
                                'title' : 'Детская игрушка',
                                'class' : 'radio',
                                'type' : 'radio',
                                'name' : 'radio',
                                'requierd' : '#',
                            } %}
                    </div>
                </div>
            </div>
        </div>
    </form>
    <form class="form__name-background--gr" action="#" method="post">
        <div class="container">
            <div class="form__name">
                <h3 class="form__title">Цвет</h3>
                <div class="form__name-wrap">
                    {% include "../components/checkbox.twig" with
                        {
                            'title' : 'Белый',
                            'class' : 'checkbox',
                            'class_label' : 'label__checkbox',
                            'type' : 'checkbox',
                            'name' : 'checkbox',
                        } %}
                    {% include "../components/checkbox.twig" with
                        {
                            'title' : 'Серый',
                            'class' : 'checkbox',
                            'class_label' : 'label__checkbox',
                            'type' : 'checkbox',
                            'name' : 'checkbox',
                        } %}
                    {% include "../components/checkbox.twig" with
                        {
                            'title' : 'Тиффани',
                            'class' : 'checkbox',
                            'class_label' : 'label__checkbox',
                            'type' : 'checkbox',
                            'name' : 'checkbox',
                        } %}
                    {% include "../components/checkbox.twig" with
                        {
                            'title' : 'Черный',
                            'class' : 'checkbox',
                            'class_label' : 'label__checkbox',
                            'type' : 'checkbox',
                            'name' : 'checkbox',
                        } %}
                    {% include "../components/checkbox.twig" with
                        {
                            'title' : 'Розовый',
                            'class' : 'checkbox',
                            'class_label' : 'label__checkbox',
                            'type' : 'checkbox',
                            'name' : 'checkbox',
                        } %}
                    {% include "../components/checkbox.twig" with
                        {
                            'title' : 'Оранжевый',
                            'class' : 'checkbox',
                            'class_label' : 'label__checkbox',
                            'type' : 'checkbox',
                            'name' : 'checkbox',
                        } %}
                </div>
            </div>
        </div>
    </form>
    <form action="#" method="post">
        <div class="container">
            <div class="form__object">
                <h3 class="form__title">ФИО</h3>
                <div class="form__object-wrap">
                    {% include '../components/input.twig' with
                        {
                            'title' : 'Имя:',
                            'class' : 'input--name',
                            'type' : 'text',
                            'placeholder' : 'Ввeдите ваше имя*',
                            'name': 'name',
                            'required' : '#',
                        } %}
                    {% include '../components/input.twig' with
                        {
                            'title' : 'Фамилия:',
                            'class' : 'input--name',
                            'type' : 'text',
                            'placeholder' : 'Укажите фамилию*',
                            'name': 'name',
                            'required' : '#',
                        } %}
                    {% include '../components/input.twig' with
                        {
                            'title' : 'Отчество:',
                            'class' : 'input--name',
                            'type' : 'text',
                            'placeholder' : 'Отчество, если желаете',
                            'name': 'name',
                            'required' : '#',
                        } %}
                </div>
            </div>
        </div>
    </form>
    <form class="form__name-background--gr" action="#" method="post">
        <div class="container">
            <div class="form__email">
                <div class="form__email-wrap">
                    <h3 class="form__title">e-mai</h3>
                    {% include '../components/input-email.twig' with
                        {
                            'modifier' : 'label--email',
                            'png_email': 'label--png-email',
                            'modifier_email' : 'input--email',
                            'type' : 'e-mail',
                            'name' : 'e-mail',
                            'placeholder' : 'misha@doc.com*',
                            'required' : '#',
                        } %}
                </div>
                <div class="form__email-wrap">
                    <h3 class="form__title">тел</h3>
                    {% include '../components/input-email.twig' with
                        {
                            'modifier' : 'label--tel',
                            'png_email': 'label--png-tel',
                            'modifier_email' : 'input--tel',
                            'type' : 'tel',
                            'name' : 'телефон',
                            'placeholder' : '+375298496688*',
                            'required' : '#',
                        } %}
                </div>
            </div>
        </div>
    </form>
    <form action="#" method="post">
        <div class="form__textarea">
            <div class="container">
                <h3 class="form__title">Доп</h3>
                {% include '../components/textarea.twig' with
                    {
                        'description' : 'Опишите свои пожелания к заказу',
                    } %}
            </div>
        </div>
    </form>
    <div class="form__wrap-submit">
        <div class="container">
            {% include '../components/submit.twig' with
                {
                    'title' : 'отправить заявку',
                } %}
            {% include '../components/important.twig' with
                {
                    'title' : '*Поля обязательны для ззаполнения',
                } %}
        </div>
    </div>
</section>